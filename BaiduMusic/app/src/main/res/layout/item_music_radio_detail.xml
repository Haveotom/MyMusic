<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/width_hundred"
        android:layout_marginLeft="@dimen/mymusic_padding_ten"
        android:layout_marginRight="@dimen/mymusic_padding_ten"
        android:layout_marginTop="@dimen/mymusic_margin_twenty">

        <ImageView
            android:id="@+id/item_music_radio_more_detail_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_error" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_hundred"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />


        <TextView
            android:id="@+id/item_music_radio_more_detail_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_forty"

            android:textColor="@color/black_most"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_music_radio_more_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/mymusic_margin_twenty"
            android:maxLines="3"
            android:textColor="@color/black_normal_most"
            android:textSize="@dimen/textsize_twelve" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_eighty">

            <ImageView
                android:id="@+id/item_music_radio_more_detail_play_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/scenario_drive_pause_button_normal" />

            <ImageView
                android:id="@+id/item_music_radio_more_detail_pause_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/scenario_drive_play_button_press"
                android:visibility="gone" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>