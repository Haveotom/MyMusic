<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_ranklist_pw_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/line_all" />

    <TextView
        android:id="@+id/detail_ranklist_pw_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_forty"
        android:background="@color/gray_least"
        android:gravity="center"
        android:textColor="@color/black_normal_most"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mymusic_padding_ten"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mymusic_padding_ten"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_ranklist_pw_like_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_listmore_love_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin_five"
                android:text="@string/like"
                android:textColor="@color/black_normal_most" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mymusic_padding_ten"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_ranklist_download_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_listmore_download_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin_five"
                android:text="@string/download"
                android:textColor="@color/black_normal_most" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mymusic_padding_ten"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_ranklist_share_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_listmore_share_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin_five"
                android:text="@string/share"
                android:textColor="@color/black_normal_most" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mymusic_padding_ten"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_ranklist_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_listmore_add_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin_five"
                android:text="@string/add"
                android:textColor="@color/black_normal_most" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>