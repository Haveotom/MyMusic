<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_forty"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_baidu_user_return_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/mymusic_padding_ten"
            android:src="@mipmap/login_return1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/mymusic_margin_twenty"
            android:gravity="center"
            android:text="@string/baidu_user"
            android:textColor="@color/black_normal_most"
            android:textSize="@dimen/textsize_seventeen" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="@color/gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mymusic_padding_ten"
            android:lineSpacingExtra="@dimen/margin_three_dp"
            android:paddingLeft="@dimen/mymusic_padding_ten"
            android:paddingRight="@dimen/mymusic_padding_ten"
            android:text="@string/activity_standard"
            android:textColor="@color/black_normal_least"
            android:textSize="@dimen/textsize_twelve" />
    </ScrollView>

</LinearLayout>