<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_hundred_twenty">

                <ImageView
                    android:id="@+id/detail_music_ranklist_icon_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred_twenty" />

                <TextView
                    android:id="@+id/detail_music_ranklist_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/margin_twelve_dp"
                    android:text="@string/update_date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_twelve" />

                <ImageView
                    android:id="@+id/detail_music_ranklist_play_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/detail_music_ranklist_date_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_margin_fifteen"
                    android:clickable="true"
                    android:src="@drawable/ranklist_play_selection" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_forty">

                <TextView
                    android:id="@+id/detail_music_songmenu_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_twelve_dp"
                    android:textSize="@dimen/textsize_thirteen" />

                <ImageView
                    android:id="@+id/detail_music_songmenu_share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mymusic_padding_ten"
                    android:src="@mipmap/ic_share_normal" />

                <ImageView
                    android:id="@+id/detail_music_songmenu_download_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_margin_five"
                    android:layout_toLeftOf="@id/detail_music_songmenu_share_iv"
                    android:src="@mipmap/ic_download_normal" />

            </RelativeLayout>

            <View style="@style/line_all" />

            <com.jingjiang.baidumusic.widget.view.NoScrollListView
                android:id="@+id/detail_music_ranklist_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_eight"
                android:layout_marginRight="@dimen/mymusic_padding_ten"
                android:scrollbars="none"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_forty"
        android:background="@color/alpha"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_music_songmenu_return_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_margin_fifteen"
            android:src="@mipmap/fanhui" />

        <TextView
            android:id="@+id/detail_music_songmenu_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textsize_fifteen"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_fifteen"
            android:textStyle="bold" />
    </LinearLayout>


</FrameLayout>